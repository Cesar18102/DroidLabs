<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalcButton">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="DigitButton" parent="CalcButton">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="OperationButton" parent="CalcButton">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">120dp</item>
    </style>

    <style name="DigitButtonLand" parent="CalcButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">90dp</item>
    </style>

    <style name="OperationButtonLand" parent="CalcButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">105dp</item>
    </style>

</resources>